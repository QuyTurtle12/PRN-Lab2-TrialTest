@model DataAccess.Entities.MedicineInformation

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>MedicineInformation</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="MedicineId" />
            <div class="form-group">
                <label asp-for="MedicineName" class="control-label">Medicine Name</label>
                <input asp-for="MedicineName" class="form-control" required/>
                <span asp-validation-for="MedicineName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ActiveIngredients" class="control-label">Active Ingredients</label>
                <input asp-for="ActiveIngredients" class="form-control" required />
                <span asp-validation-for="ActiveIngredients" class="text-danger">Active Ingredients</span>
            </div>
            <div class="form-group">
                <label asp-for="ExpirationDate" class="control-label">Expiration Date</label>
                <input asp-for="ExpirationDate" class="form-control" required />
                <span asp-validation-for="ExpirationDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DosageForm" class="control-label">Dosage Form</label>
                <input asp-for="DosageForm" class="form-control" required />
                <span asp-validation-for="DosageForm" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="WarningsAndPrecautions" class="control-label">Warnings And Precautions</label>
                <input asp-for="WarningsAndPrecautions" class="form-control" required />
                <span asp-validation-for="WarningsAndPrecautions" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ManufacturerId" class="control-label">Manufacturer</label>
                <select asp-for="ManufacturerId" class="form-control" asp-items="ViewBag.ManufacturerId"></select>
                <span asp-validation-for="ManufacturerId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
